{% extends 'base.html.twig' %}

{% block title %}Plans{% endblock %}

{% block body %}
    <h1>Plans</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for plan in plans %}
                <tr>
                    <td>{{ plan.id }}</td>
                    <td>{{ plan.name }}</td>
                    <td>{{ plan.price / 100 }} EUR</td>
                    <td>
                        <form action="{{ path('create_checkout_session', {planId: plan.stripeId}) }}" method="post">
                            <button type="submit">Pay</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}